{
  "scripts": {
    "build": "tsc -p .",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start": "pm2 stop study_rent_prod && pm2 start -f dist/main.js --name study_rent_prod && pm2 list -d",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up"
  },
  "rootDir": "src",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pm2": "^5.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}
